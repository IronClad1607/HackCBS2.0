<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#080422"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activities.LoginActivity">


    <ImageView
        android:id="@+id/IVlogo"
        android:layout_width="wrap_content"
        android:layout_height="242dp"
        android:layout_marginTop="50dp"
        tools:src="@tools:sample/backgrounds/scenic[9]" />

    <TextView
        android:layout_marginTop="50dp"
        android:textSize="40sp"
        android:textColor="#F68815"
        android:text="@string/app_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnOTP"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:text="@string/sign_in_with_otp"
        android:drawableStart="@drawable/ic_phone_black_36dp" />

    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:text="@string/sign_in_with_google"
        android:drawableStart="@drawable/common_google_signin_btn_icon_light" />
</LinearLayout>